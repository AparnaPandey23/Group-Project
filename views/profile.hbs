<head>
    <link rel="stylesheet" href="/stylesheets/profile-style.css">
</head>
<div class="container">
  <div class="row" id="settings-card">
    <div class="card z-depth-2">
      <div class="card-content">
        <div class="row">
          <div class="col s2">
            <div class="card-image">
              <img src="/images/logo2.svg" class="circle responsive-img" style="width:100%">
            </div>            
          </div>
          <div class="col s10">
          <div class="card-content pink lighten-4 z-depth-1">
              <form action="" id="profile-form" >
                <h3>View Personal Info:</h3>
                  <div class="con ">
                      <div class="field-set ">
                          {{!-- <h2>Add Child</h2>
                          <p>Add a child to the system</p> --}}
                          <div class="row">
                              <!--   Full  name -->
                              <span class="input-item col s6 z-depth-1">
                                <i class="fas fa-user-circle fa-1x"></i>
                                <input class="form-input active validate z-depth-3" id="inputFirstName" type="text" placeholder="Full Name" required />  
                              </span>
                          </div>
                          <div class="row" id="mobile">
                            <!--   Phone number -->
                            {{!-- <label for="mobile">
                              Mobile: --}}
                              <span class="input-item col s12 z-depth-1" >
                                <i class="fas fa-mobile-alt"></i>
                                <input class="form-input active validate" id="mobile" name="mobile" placeholder="Mobile Number" type="text" required/>
                              </span>
                            {{!-- </label> --}}
                            
                            <!--   Spouse's Phone number -->
                            <span class="input-item col s12 z-depth-1" >
                              <i class="fas fa-mobile-alt"></i>
                              <input class="form-input active validate" id="mobile2" name="mobile2" placeholder="Spouse's Mobile Number (Optional)" type="text"/>
                            </span>
                          </div>
                          <div class="row">
                              <span class="input-item col s12 z-depth-1" >
                                <i class="fas fa-at" style="margin-top:20px;"></i>
                                <input class="form-input active validate" id="email" type="email" placeholder="Parent's Email" />
                              </span>
                          </div>
                          <div class="row">
                              <!--   Home Address -->
                              <span class="input-item col s6 z-depth-1">
                                <i class="fas fa-home fa-1x"></i>
                                <input class="form-input active validate z-depth-3" id="homeAdd" type="text" placeholder="Home Address" required />  
                              </span>

                              <!--   Work Address -->
                              <span class="input-item col s6 z-depth-1">
                                <i class="fas fa-building fa-1x"></i>
                                <input class="form-input active validate" id="workAdd" type="text" placeholder="Work Address (Optional)" />
                              </span>
                          </div>
                      </div>
                  </div>
              </form>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
<script src="/javascripts/profile-settings.js"></script>
<script>  
    $(document).ready(function(){
      var date_input=$('input[name="date"]'); //our date input has the name "date"
      var container=$('.bootstrap-iso form').length>0 ? $('.bootstrap-iso form').parent() : "body";
      var options={
        format: 'mm/dd/yyyy',
        container: container,
        todayHighlight: true,
        autoclose: true,
      };
      date_input.datepicker(options);
    })
</script>